{
    "name": "sophie-spec/describe",
    "description": "Write clear and understandable specs",
    "keywords": [
        "unit",
        "test",
        "assert",
        "expect",
        "coverage",
        "spec",
        "phpunit",
        "atoum",
        "rspec",
        "phpspec",
        "xdebug",
        "sophie"
    ],
    "license": "MIT",
    "authors": [{
        "name": "AurÃ©lien Delogu",
        "email": "dev@dreamysource.fr"
    }],
    "scripts": {
        "git:init": "./vendor/bin/grumphp git:init",
        "publish": "./vendor/bin/robo publish",
        "spec": "php spec.php"
    },
    "autoload": {
        "psr-4" : {
            "SophieSpec\\Describe\\" : "src/"
        },
        "files": [
            "src/describe.php",
            "src/it.php",
            "src/when.php",
            "src/with.php"
        ]
    },
    "require": {
        "php": ">=7.4.0"
    },
    "require-dev": {
        "consolidation/robo": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpro/grumphp": "^0.17.1",
        "povils/phpmnd": "^2.1",
        "sebastian/phpcpd": "^4.1",
        "sensiolabs/security-checker": "^6.0",
        "vimeo/psalm": "^3.7",
        "phlak/semver": "^3.0",
        "mockery/mockery": "^1.3",
        "symfony/error-handler": "^5.0",
        "symfony/var-dumper": "^5.0",
        "phpmd/phpmd": "^2.8"
    }
}
